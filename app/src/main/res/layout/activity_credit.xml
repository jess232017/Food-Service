<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="0.0dip"
        android:layout_height="@dimen/spacing_large" />

    <View
        android:layout_width="0.0dip"
        android:layout_height="@dimen/spacing_large" />
    <View
        android:layout_width="0.0dip"
        android:layout_height="@dimen/spacing_large" />

    <LinearLayout
        android:layout_marginTop="@dimen/SeparateText"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0.0dip"
            android:layout_height="@dimen/spacing_large" />

        <ImageView
            android:id="@id/image"
            android:layout_gravity="center"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:src="@drawable/ic_logo_small"
            android:tint="@color/grey_90"
            tools:ignore="ContentDescription" />

        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_gravity="center"
            android:textColor="@color/grey_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_middle"
            android:text="@string/Fritanga_Name" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="@dimen/spacing_large" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_medium"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/ic_location"
                tools:ignore="ContentDescription" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction" />

        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="@dimen/spacing_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingBottom="@dimen/IconCreateAccountDim"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlue"
                    android:layout_gravity="start"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/desarrolladores"
                    android:maxLines="1"
                    android:layout_weight="1.0"/>
            </LinearLayout>

            <View
                android:layout_width="0.0dip"
                android:layout_height="@dimen/spacing_large" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="start"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/desarrollador"
                    android:maxLines="1"
                    android:layout_weight="1.0"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/name1"
                    android:layout_weight="1.0"/>
            </LinearLayout>

            <View
                android:layout_width="0.0dip"
                android:layout_height="@dimen/spacing_large" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/order_name"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="start"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/Desarrolado2"
                    android:maxLines="1"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/pay_status"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1.0"
                    android:gravity="end"
                    android:text="@string/name2"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="0.0dip"
            android:layout_height="@dimen/spacing_large" />
    </LinearLayout>
</LinearLayout>